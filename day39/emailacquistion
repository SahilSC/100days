import requests
import os
import smtplib
SHEETY_USERS_ENDPOINT = "https://api.sheety.co/533c6cd46d1fb3fe1daab6928e0cd70a/flights/users"
SHEETY_KEY = os.environ['DATA_MANAGER_KEY']
headers = {
    "Authorization":SHEETY_KEY
}
first_name = input("What is your first name?\n")
last_name = input("What is your last name?\n")
good = True
email1 = input("What is your email?\n")
while True:
    email2 = input("Type your email again.\n")
    if email1 == email2:
        print("You're in the club!\n")
        break
    else:
        email1 = input("Try again. What is your email?\n")

json = {"user":
            {"firstName":first_name,
             "lastName":last_name,
             "email":email1}}
response = requests.post(url=SHEETY_USERS_ENDPOINT, json = json, headers = headers)
response.raise_for_status()